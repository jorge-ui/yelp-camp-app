<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4 border rounded py-2 my-4 mx-auto bg-white">
            <h2 class="text-center">Edit comment</h2>
            <form method="POST" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT">
                <div class="form-group">
                    <label for="Text">Text</label>
                    <textarea name="comment[text]" id="Text" rows="4" class="form-control"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-warning">Update comment</button>
                </div>
                <a href="/campgrounds/<%=campground_id%>">Go back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>