<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4 border rounded py-2 my-4 mx-auto bg-white">
            <h2 class="text-center">New comment</h2>
            <form method="POST" action="/campgrounds/<%=campground._id%>/comments">
                <div class="form-group">
                    <label for="Text">Text</label>
                    <textarea name="comment[text]" id="Text" rows="4" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary">Add comment</button>
                </div>
                <a href="/campgrounds/<%=campground._id%>">Go back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>