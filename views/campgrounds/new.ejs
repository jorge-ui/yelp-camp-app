<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4 border rounded py-2 my-4 mx-auto bg-white">
            <h2 class="text-center">Add new campground</h2>
            <form method="POST" action="/campgrounds">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input id="Name" name="name" placeholder="Campground Name" class="form-control" type="text" required>
                </div>
                <div class="form-group">
                    <label for="Image">Image(URL)</label>
                    <input id="Image" name="image" class="form-control" placeholder="http://" type="text" required>
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea id="Description" placeholder="describe your campground here" name="description" class="form-control" rows="5" required></textarea>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-block btn-primary">Add campground</button>
                </div>
                <a href="/campgrounds">Go back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>